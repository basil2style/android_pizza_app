<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/salami" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pizza Size:"
        android:id="@+id/txtSize" />

    <co.ceryle.radiorealbutton.library.RadioRealButtonGroup

        android:id="@+id/radioRealButtonGroup_1"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        app:rrbg_backgroundColor="@color/white"

        app:rrbg_bottomLineColor="@color/grey_600"
        app:rrbg_bottomLineSize="2dp"

        app:rrbg_dividerColor="@color/grey_500"

        app:rrbg_dividerPadding="10dp"
        app:rrbg_dividerRadius="0dp"
        app:rrbg_dividerSize="1dp"

        app:rrbg_position="1"
        app:rrbg_radius="0dp"

        app:rrbg_selectorAboveOfBottomLine="true"
        app:rrbg_selectorColor="@color/grey_600"
        app:rrbg_selectorSize="2dp"

        app:rrbg_shadow="true"

        app:rrbg_shadowElevation="2dp"
        app:rrbg_shadowMargin="3dp">

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_imageHeight="48dp"
            app:rrb_imageWidth="48dp"
            app:rrb_ripple="true"
            app:rrb_text="Small" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_imageHeight="36dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_text="Medium" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_imageHeight="24dp"
            app:rrb_imageWidth="24dp"
            app:rrb_ripple="true"
            app:rrb_text="Large" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_imageHeight="24dp"
            app:rrb_imageWidth="24dp"
            app:rrb_ripple="true"
            app:rrb_text="X Large" />
    </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dough Type:"
        android:id="@+id/textView" />
    <co.ceryle.radiorealbutton.library.RadioRealButtonGroup

        android:id="@+id/radioRealButtonGroup_2"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        app:rrbg_backgroundColor="@color/white"

        app:rrbg_bottomLineColor="@color/grey_600"
        app:rrbg_bottomLineSize="2dp"

        app:rrbg_dividerColor="@color/grey_500"

        app:rrbg_dividerPadding="10dp"
        app:rrbg_dividerRadius="0dp"
        app:rrbg_dividerSize="1dp"

        app:rrbg_position="1"
        app:rrbg_radius="0dp"

        app:rrbg_selectorAboveOfBottomLine="true"
        app:rrbg_selectorColor="@color/grey_600"
        app:rrbg_selectorSize="2dp"

        app:rrbg_shadow="true"

        app:rrbg_shadowElevation="2dp"
        app:rrbg_shadowMargin="3dp">

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_imageHeight="48dp"
            app:rrb_imageWidth="48dp"
            app:rrb_ripple="true"
            app:rrb_text="Thin" />

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_imageHeight="36dp"
            app:rrb_imageWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_text="Thick" />

    </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>
    <com.toptoche.multiselectwidget.MultiSelectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to Add Toppings"
        android:id="@+id/m" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_checkout"
        android:id="@+id/checkout"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
    </LinearLayout>

</ScrollView>
